package cursojava.executavel;

import java.util.Locale;
import java.util.Scanner;

import javax.swing.JOptionPane;

import cursojava.classes.Aluno;

public class PrimeiraClasseJava {

	
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in); 

		// new Aluno() é uma instância (criação do objeto)
		// aluno1 é uma referencia para o objeto aluno
		
		String nome = JOptionPane.showInputDialog("Quakl o nome do aluno");
		
		Aluno aluno1 = new Aluno(); // Joao
		aluno1.setNome(nome);
		aluno1.setIdade(50);
		aluno1.setDataNascimento("04/07/1997");
		aluno1.setRegistroGeral("12345");
		aluno1.setNumeroCPF("123456");
		aluno1.setNomeMae("Lia");
		aluno1.setNomePai("Lima");
		aluno1.setDatamatricula("06/07/2019");
		aluno1.setNomeEscola("JDev");
		aluno1.setSerieMatriculado("4");
		aluno1.setNota1(9);
		aluno1.setNota2(6);
		aluno1.setNota3(7);
		aluno1.setNota4(9);
		
		
		
		System.out.println("Nome do aluno 1 é = " + aluno1.getNome());
		System.out.println("Idade do aluno é : " + aluno1.getIdade());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getDataNascimento());
		System.out.println("RG do aluno é : " + aluno1.getRegistroGeral());
		System.out.println("CPF do aluno é : " + aluno1.getNumeroCPF());
		System.out.println("Nome da Mãe do aluno é : " + aluno1.getNomeMae());
		System.out.println("Nome do Pai do aluno é : " + aluno1.getNomePai());
		System.out.println("Data da Matricula do aluno é : " + aluno1.getDatamatricula());
		System.out.println("Nome da Escola do aluno é : " + aluno1.getNomeEscola());
		System.out.println("Serie Matriculado do aluno é : " + aluno1.getSerieMatriculado());
		System.out.println("A nota1 do Aluno é : " + aluno1.getNota1());
		System.out.println("A nota2 do Aluno é : " + aluno1.getNota2());
		System.out.println("A nota3 do Aluno é : " + aluno1.getNota3());
		System.out.println("A nota4 do Aluno é : " + aluno1.getNota4());
		System.out.println("A media do aluno1 é: " + aluno1.getMediaNota());
		System.out.println("O resultado do aluno é: " + (aluno1.getAlunoAprovado() ? "Aprovado" : "Reprovado"));
		System.out.println("O aluno está Aprovado: " + aluno1.getAlunoAprovado2());
		System.out.println("-----------------------------------------------------------------------------");
		
		//------------------------------------------------------------------------------------------------
		
		Aluno aluno2 = new Aluno(); // Pedro
		aluno2.setNome("Pedro");
		aluno2.setIdade(33);
		aluno2.setDataNascimento("10/10/2013");
		
		System.out.println("Nome do aluno  é = " + aluno2.getNome());
		System.out.println("Idade do aluno é : " + aluno2.getIdade());
		System.out.println("Data de nascimento do aluno é : " + aluno2.getDataNascimento());
		
		//------------------------------------------------------------------------------------------------
		
		Aluno aluno3 = new Aluno(); // Alex
		
		Aluno aluno4 = new Aluno("Maria");
		
		Aluno aluno5 = new Aluno("Jose,50");
		
		sc.close();
	}

}
