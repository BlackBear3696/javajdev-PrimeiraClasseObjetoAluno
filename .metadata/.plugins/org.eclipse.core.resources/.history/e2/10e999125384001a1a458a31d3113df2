package cursojava.executavel;

import java.util.Locale;
import java.util.Scanner;

import cursojava.classes.Aluno;

public class PrimeiraClasseJava {

	
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in); 

		// new Aluno() é uma instância (criação do objeto)
		// aluno1 é uma referencia para o objeto aluno
		Aluno aluno1 = new Aluno(); // Joao
		aluno1.setNome("Joao");
		aluno1.setIdade(50);
		aluno1.setDataNascimento("04/07/1997");
		aluno1.setRegistroGeral("12345");
		aluno1.setNumeroCPF("123456");
		aluno1.setNomeMae("Lia");
		aluno1.setNomePai("Lima");
		aluno1.setDatamatricula("06/07/2019");
		aluno1.setSerieMatriculado("4");
		
		
		
		
		System.out.println("Nome do aluno 1 é = " + aluno1.getNome());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getIdade());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getDataNascimento());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getRegistroGeral());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getNumeroCPF());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getNomeMae());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getNomePai());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getDatamatricula());
		System.out.println("Data de nascimento do aluno é : " + aluno1.getSerieMatriculado());
		
		Aluno aluno2 = new Aluno(); // Pedro
		
		Aluno aluno3 = new Aluno(); // Alex
		
		Aluno aluno4 = new Aluno("Maria");
		
		Aluno aluno5 = new Aluno("Jose,50");
		
		sc.close();
	}

}
